<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	 	<property name="locations">
	 		<list>
	 			<value>classpath:environment.properties</value>
	 		</list>
		</property>
	</bean>
	
	<bean class="no.helsebiblioteket.evs.plugin.ProxyLoginController">
 		<property name="urlPattern" value="/site/2/ProxyServlet" />
 		<property name="priority" value="9998" />
 		<property name="resultSessionVarName" value="hbproxyresult" />
 		<property name="proxyPassword" value="${proxy.password}" />
 		<property name="urlParamName" value="url" />
 		<property name="proxyUrl" value="${proxy.url}" />
 		<property name="logUpUrl" value="${proxy.logup.url}" />
 		<property name="urlService" ref="proxyUrlServiceWeb" />
 		<property name="loggedInFunction" ref="loggedInFunction" />
	</bean>
	
	<bean name="proxyUrlServiceWeb" class="no.helsebiblioteket.admin.webservice.URLServiceWeb" init-method="init">
		<property name="serviceClient" ref="proxyControllerUrlServiceClient" />
		<property name="targetEPR" ref="proxyControllerUrlServiceTargetERP" />
		<property name="isAffectedName" ref="proxyControllerIsAffected" />
	</bean>
	<bean name="proxyControllerUrlServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="proxyControllerUrlServiceTargetERP" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/urlService" />
	</bean>
	<bean name="proxyControllerIsAffected" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="isAffected" />
	</bean>
</beans>
