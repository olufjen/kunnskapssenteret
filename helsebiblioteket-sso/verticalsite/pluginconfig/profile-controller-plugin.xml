<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	 	<property name="locations">
	 		<list>
	 			<value>classpath:environment.properties</value>
	 		</list>
		</property>
	</bean>
	
	<bean id="appCacheManager"
		class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation" value="classpath:ehcache-helsebiblioteket.xml" />
	</bean>
	<bean id="methodCachingAdvice"
		class="no.helsebiblioteket.admin.webservice.CacheHelper">
	  <property name="cacheManager" ref="appCacheManager" />
	</bean>
	
	<bean class="no.helsebiblioteket.evs.plugin.ProfileController">
 		<property name="urlPattern" value="/site/2/RedigerProfilServlet" />
 		<property name="userService" ref="profileUserService" />
 		<property name="organizationService" ref="profileOrganizationService" />
 		<property name="resultSessionVarName" value="hbprofileresult" />
 		<property name="editPasswordresultVarName" value="hbeditpasswordresult" />
 		<property name="editPasswordFromVarName" value="hbeditpasswordfrom" />
 		<property name="editPasswordUserVarName" value="hbeditpassworduser" />
 		
 		<property name="parameterNames"><map>
 			<entry key="studentorhprordateofbirth" value="studentorhprordateofbirth"/>
 			<entry key="firstname" value="firstname"/>
 			<entry key="lastname" value="surname"/>
 			<entry key="employer" value="org"/>
 			<entry key="position" value="position"/>
 			<entry key="newsletter" value="newsletter"/>
 			<entry key="questionaire" value="survey"/>
 			<entry key="emailaddress" value="email"/>
 			<entry key="password" value="password"/>
 			<entry key="passwordrepeat" value="confirmpassword"/>
 			<entry key="role" value="role"/>
 			
 			<entry key="from" value="from"/>
 			<entry key="goto" value="goto"/>
 			<entry key="viewPage" value="viewPage"/>
 			<entry key="editPage" value="editPage"/>
 			<entry key="passwordPage" value="passwordPage"/>

 			<entry key="fromform" value="fromform"/>

 			<entry key="resultName" value="result"/>
 			<entry key="resultValue" value="true"/>
 			<entry key="saveName" value="save"/>
 			<entry key="saveValue" value="Lagre"/>
 			<entry key="deleteName" value="delete"/>
 			<entry key="deleteValue" value="Slett"/>
 			<entry key="editPasswordName" value="editpassword"/>
 			<entry key="editPasswordValue" value="Endre passord"/>
 			<entry key="savePasswordName" value="savepassword"/>
 			<entry key="savePasswordValue" value="Lagre"/>
 			<entry key="cancelName" value="cancel"/>
 			<entry key="cancelValue" value="Avbryt"/>
 			<entry key="cancelPasswordName" value="cancelpassword"/>
 			<entry key="cancelPasswordValue" value="Avbryt"/>
 			<entry key="editProfileName" value="editprofile"/>
 			<entry key="editProfileValue" value="Rediger profil"/>
 		</map></property>
	</bean>
	<bean name="profileUserService" class="no.helsebiblioteket.admin.webservice.UserServiceWeb" init-method="init">
		<property name="serviceClient" ref="profileServiceClient" />
		<property name="targetEPR" ref="profileTargetEPR" />
		<property name="updateUserName" ref="profileUpdateUser" />
		<property name="findUserByUsernameName" ref="findUserByUsername" />
		<property name="systemByKey" ref="systemByKeyName" />
		<property name="roleByKeyName" ref="roleByKeyName" />
		<property name="positionByKey" ref="getPositionByKey" />
		<property name="cacheHelper" ref="methodCachingAdvice" />
	</bean>
	
	<bean name="profileOrganizationService" class="no.helsebiblioteket.admin.webservice.OrganizationServiceWeb" init-method="init">
		<property name="serviceClient" ref="organizationServiceClient" />
		<property name="targetEPR" ref="organizationTargetEPR" />
		<property name="organizationTypeByKeyName" ref="organizationTypeByKeyName" />
		<property name="cacheHelper" ref="methodCachingAdvice" />
	</bean>
	
	<bean name="organizationServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	
	<bean name="organizationTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/organizationService" />
	</bean>
	
	<bean name="organizationTypeByKeyName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getOrganizationTypeByKey" />
	</bean>
	
	<bean name="profileServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	
	<bean name="profileTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/userService" />
	</bean>
	
	<bean name="profileUpdateUser" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="updateUser" />
	</bean>
	<bean name="findUserByUsername" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="findUserByUsername" />
	</bean>
	<bean name="systemByKeyName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getSystemByKey" />
	</bean>
	<bean name="roleByKeyName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getRoleByKeySystem" />
	</bean>
	<bean name="getPositionByKey" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getPositionByKey" />
	</bean>
</beans>