<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	 	<property name="locations">
	 		<list>
	 			<value>classpath:environment.properties</value>
	 		</list>
		</property>
	</bean>
	<bean id="appCacheManager"
		class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation" value="classpath:ehcache-helsebiblioteket.xml" />
	</bean>
	<bean id="methodCachingAdvice"
		class="no.helsebiblioteket.admin.webservice.InvokeCache">
	  <property name="cacheManager" ref="appCacheManager" />
	</bean>
	<bean class="no.helsebiblioteket.evs.plugin.LinkFilter">
 		<property name="urlPattern" value="/site/[0-3]/.*" />
 		<property name="urlService" ref="urlService" />
 		<property name="sessionVarName" value="hbloggedin" />
	</bean>
	<bean class="no.helsebiblioteket.evs.plugin.LogInInterceptor">
 		<property name="urlPattern" value="/site/[0-3]/.*" />
 		<property name="priority" value="9999" />
 		<property name="loginService" ref="interceptorLoginService" />
 		<property name="loggedInFunction" ref="loggedInFunction" />
	</bean>

	<bean name="interceptorLoginService" class="no.helsebiblioteket.admin.webservice.LoginServiceWeb" init-method="init">
		<property name="serviceClient" ref="interceptorLoginServiceClient" />
		<property name="targetEPR" ref="interceptorLoginServiceTargetEPR" />
		<property name="logInIpAddressName" ref="interceptorLogInIpAddress" />
		<property name="invokeCache" ref="methodCachingAdvice" />
	</bean>
	
	<bean name="interceptorLoginServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>

	<bean name="interceptorLoginServiceTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/loginService" />
	</bean>
	
	<bean name="interceptorLogInIpAddress" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="loginOrganizationByIpAddress" />
	</bean>
</beans>
