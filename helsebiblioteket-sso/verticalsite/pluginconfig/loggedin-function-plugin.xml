<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <!-- Configure the function library to respond at extension "example". -->
    <bean class="com.enonic.cms.api.plugin.FunctionLibraryPlugin">
        <property name="name" value="loggedinuser"/>
        <property name="target" ref="loggedInFunction" />
    </bean>
    
    <bean name="loggedInFunction" class="no.helsebiblioteket.evs.plugin.LoggedInFunction">
    	<property name="organizationService" ref="loggedInFunctionOrganizationService" />
    </bean>

    <bean name="loggedInFunctionOrganizationService" class="no.helsebiblioteket.admin.webservice.OrganizationServiceWeb" init-method="init">
		<property name="serviceClient" ref="loggedInServiceClient" />
		<property name="targetEPR" ref="loggedInTargetEPR" />
		<property name="allPositionsName" ref="loggedInAllPositionsName" />
	</bean>
	<bean name="loggedInServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="loggedInTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="http://localhost:8080/axis2/services/organizationService" />
	</bean>
	<bean name="loggedInAllPositionsName" class="javax.xml.namespace.QName">
		<constructor-arg value="http://service.admin.helsebiblioteket.no" />
		<constructor-arg value="getAllPositions" />
	</bean>
</beans>