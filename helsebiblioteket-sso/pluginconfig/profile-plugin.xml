<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean class="no.helsebiblioteket.evs.plugin.ProfileController">
 		<property name="urlPattern" value="/site/2/RedigerProfilServlet" />
 		<property name="resultSessionVarName" value="hbprofileresult" />
 		<!-- TODO: Use different names! -->
 		<property name="userService" ref="userServiceImpl" />
 		<property name="parameterNames"><map>
 			<entry key="hprno" value="uid"/>
 			<entry key="firstname" value="firstname"/>
 			<entry key="lastname" value="surname"/>
 			<entry key="employer" value="org"/>
 			<entry key="newsletter" value="newsletter"/>
 			<entry key="questionaire" value="survey"/>
 			<entry key="emailaddress" value="email"/>
 			<entry key="password" value="password"/>
 			<entry key="passwordrepeat" value="confirmpassword"/>
 			<entry key="role" value="role"/>
 			
 			<entry key="from" value="from"/>
 			<entry key="goto" value="goto"/>
 			<entry key="resultName" value="result"/>
 			<entry key="resultValue" value="true"/>
 			<entry key="saveName" value="save"/>
 			<entry key="saveValue" value="true"/>
 			<entry key="deleteName" value="delete"/>
 			<entry key="deleteValue" value="true"/>
 		</map></property>
	</bean>
	<!-- TODO: Use web services! -->
	<bean id="userServiceImpl" class="no.helsebiblioteket.admin.service.impl.UserServiceImpl">
	 	<property name="userDao" ref="userDao"></property>
	 	<property name="userCompositeDao" ref="userCompositeDao"></property>
	 	<property name="personDao" ref="personDao"></property>
	</bean>
	<bean id="userDao" class="no.helsebiblioteket.admin.dao.JdbcUserDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="userCompositeDao" class="no.helsebiblioteket.admin.dao.JdbcUserCompositeDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="personDao" class="no.helsebiblioteket.admin.dao.JdbcPersonDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="jdbcTemplateHelsebiblioteket" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSourceHelsebiblioteket"></property>
	</bean>
	<bean id="dataSourceHelsebiblioteket" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.postgresql.Driver"></property>
		<property name="url" value="jdbc:postgresql://localhost/helsebiblioteket-admin"></property>
		<property name="username" value="helsebiblioteket"></property>
		<property name="password" value="helsebiblioteket"></property>
	</bean>
	
	
	
	
	
	
	
	
	
	
	<bean name="profileUserService" class="no.helsebiblioteket.admin.webservice.UserServiceWeb" init-method="init">
		<property name="serviceClient" ref="profileServiceClient" />
		<property name="targetEPR" ref="profileTargetEPR" />
		<property name="saveUser" ref="profileSaveUser" />
		<property name="findUser" ref="profileFindUser" />
	</bean>
	<bean name="profileServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="profileTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="http://localhost:8080/axis2/services/userService" />
	</bean>
	<bean name="profileSaveUser" class="javax.xml.namespace.QName">
		<constructor-arg value="http://service.admin.helsebiblioteket.no" />
		<constructor-arg value="saveUser" />
	</bean>
	<bean name="profileFindUser" class="javax.xml.namespace.QName">
		<constructor-arg value="http://service.admin.helsebiblioteket.no" />
		<constructor-arg value="findUserByUsername" />
	</bean>
</beans>
