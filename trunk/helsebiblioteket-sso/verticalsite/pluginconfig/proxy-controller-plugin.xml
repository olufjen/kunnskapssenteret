<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	 	<property name="locations">
	 		<list>
	 			<value>classpath:environment.properties</value>
	 		</list>
		</property>
	</bean>
	<bean id="appCacheManager"
		class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation" value="classpath:ehcache-helsebiblioteket.xml" />
	</bean>
	<bean id="methodCachingAdvice"
		class="no.helsebiblioteket.admin.webservice.CacheHelper">
	  <property name="cacheManager" ref="appCacheManager" />
	</bean>
	<bean class="no.helsebiblioteket.evs.plugin.ProxyLoginController">
 		<property name="urlPattern" value="/site/2/ProxyServlet" />
 		<property name="priority" value="9998" />
 		<property name="resultSessionVarName" value="hbproxyresult" />
 		<property name="proxyPassword" value="${proxy.password}" />
 		<property name="urlParamName" value="url" />
 		<property name="proxyUrl" value="${proxy.url}" />
 		<property name="logUpUrl" value="${proxy.logup.url}" />
 		<property name="urlService" ref="proxyUrlServiceWeb" />
 		<property name="loggedInFunction" ref="loggedInFunction" />
	</bean>
	
	<bean name="proxyUrlServiceWeb" class="no.helsebiblioteket.admin.webservice.URLServiceWeb" init-method="init">
		<property name="serviceClient" ref="proxyControllerUrlServiceClient" />
		<property name="targetEPR" ref="proxyControllerUrlServiceTargetEPR" />
		<property name="isAffectedName" ref="proxyControllerIsAffectedName" />
		<property name="hasAccessOrganizationUserOrganizationName" ref="hasAccessOrganizationUserOrganizationName" />
		<property name="hasAccessUserOrganizationName" ref="hasAccessUserOrganizationName" />
		<property name="hasAccessOrganizationName" ref="hasAccessOrganizationName" />
		<property name="groupName" ref="groupName" />
		<property name="accessTypeForUserAndMemberOrganizationName" ref="accessTypeForUserAndMemberOrganizationName" />
		<property name="cacheHelper" ref="methodCachingAdvice" />
	</bean>
	<bean name="proxyControllerUrlServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="proxyControllerUrlServiceTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/urlService" />
	</bean>
	<bean name="proxyControllerIsAffectedName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="isAffected" />
	</bean>
	<bean name="hasAccessOrganizationUserOrganizationName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="hasAccessOrganizationUserOrganization" />
	</bean>
	<bean name="hasAccessUserOrganizationName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="hasAccessUserOrganization" />
	</bean>
	<bean name="hasAccessOrganizationName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="hasAccessOrganization" />
	</bean>
	<bean name="groupName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="group" />
	</bean>
	<bean name="accessTypeForUserAndMemberOrganizationName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getAccessTypeForUserAndMemberOrganization" />
	</bean>
</beans>