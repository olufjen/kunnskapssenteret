<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	 	<property name="locations">
	 		<list>
	 			<value>classpath:environment.properties</value>
	 		</list>
		</property>
	</bean>
	
	<bean class="no.helsebiblioteket.evs.plugin.RegisterUserController">
 		<property name="urlPattern" value="/site/2/RegistreringBrukerServlet" />
 		<property name="userService" ref="registerUserService" />
 		<property name="organizationService" ref="organizationService" />
 		<property name="resultSessionVarName" value="hbregisterresult" />
 		<property name="parameterNames"><map>
 			<entry key="usertype" value="usertype"/>
 			<entry key="hprnumber" value="uid"/>
 			<entry key="studentnumber" value="studentnumber"/>
 			<entry key="firstname" value="firstname"/>
 			<entry key="lastname" value="surname"/>
 			<entry key="employer" value="org"/>
 			<entry key="studentansatt" value="studentansatt"/>
 			<entry key="newsletter" value="newsletter"/>
 			<entry key="survey" value="survey"/>
 			<entry key="emailaddress" value="email"/>
 			<entry key="repeatemail" value="repeatemail"/>
 			<entry key="username" value="username"/>
 			<entry key="password" value="password"/>
 			<entry key="passwordrepeat" value="confirmpassword"/>
 			<entry key="position" value="position"/>
 			<entry key="positiontext" value="positiontext"/>
 			<entry key="from" value="from"/>
 			<entry key="goto" value="goto"/>
 			<entry key="saveName" value="save"/>
 			<entry key="saveValue" value="true"/>
 			<entry key="cancelName" value="cancel"/>
 			<entry key="cancelValue" value="Avbryt"/>
 			<entry key="confirmName" value="confirm"/>
 			<entry key="confirmValue" value="true"/>
 			<entry key="formId" value="form_id"/>
 		</map></property>
 		<property name="emailService" ref="emailService" />
 		<property name="fromEmailText" value="fromEmailText" />
 		<property name="fromNameText" value="fromNameText" />
 		<property name="messageText" value="messageText" />
 		<property name="subjectText" value="subjectText" />
	</bean>
	<bean name="registerUserService" class="no.helsebiblioteket.admin.webservice.UserServiceWeb" init-method="init">
		<property name="serviceClient" ref="userServiceClient" />
		<property name="targetEPR" ref="userTargetEPR" />
		<property name="updateUserName" ref="registerUpdateUser" />
		<property name="findUserByUsernameName" ref="registerFindUser" />
		<property name="insertUserName" ref="registerInsertUser" />
		<property name="roleByKeyName" ref="getRoleByKeyName" />
		<property name="positionByKey" ref="getPositionByKey" />
		<property name="systemByKey" ref="getSystemByKey" />
	</bean>
	<bean name="organizationService" class="no.helsebiblioteket.admin.webservice.OrganizationServiceWeb" init-method="init">
		<property name="serviceClient" ref="organizationServiceClient" />
		<property name="targetEPR" ref="organizationTargetEPR" />
		<property name="organizationTypeByKeyName" ref="organizationTypeByKeyName" />
	</bean>
	<bean name="organizationServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="userServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="userTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/userService" />
	</bean>
	<bean name="organizationTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/organizationService" />
	</bean>
	<bean name="registerUpdateUser" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="saveUser" />
	</bean>
	<bean name="registerFindUser" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="findUserByUsername" />
	</bean>
	<bean name="registerInsertUser" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="insertUser" />
	</bean>
	<bean name="getRoleByKeyName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getRoleByKeySystem" />
	</bean>
	<bean name="getPositionByKey" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getPositionByKey" />
	</bean>
	<bean name="getSystemByKey" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getSystemByKey" />
	</bean>
	<bean name="organizationTypeByKeyName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getOrganizationTypeByKey" />
	</bean>

	<bean name="emailService" class="no.helsebiblioteket.admin.webservice.EmailServiceWeb" init-method="init">
		<property name="serviceClient" ref="emailServiceClient" />
		<property name="targetEPR" ref="emailTargetEPR" />
		<property name="sendEmailName" ref="sendEmailName" />
	</bean>
	<bean name="emailServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="emailTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/emailService" />
	</bean>
	<bean name="sendEmailName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="sendEmail" />
	</bean>
</beans>
