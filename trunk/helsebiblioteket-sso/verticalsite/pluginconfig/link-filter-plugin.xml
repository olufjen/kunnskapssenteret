<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	 	<property name="locations">
	 		<list>
	 			<value>classpath:environment.properties</value>
	 		</list>
		</property>
	</bean>
	<bean id="appCacheManager"
		class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation" value="classpath:ehcache-helsebiblioteket.xml" />
	</bean>
	<bean id="methodCachingAdvice"
		class="no.helsebiblioteket.admin.webservice.InvokeCache">
	  <property name="cacheManager" ref="appCacheManager" />
	</bean>
	<bean class="no.helsebiblioteket.evs.plugin.LinkFilter">
 		<property name="urlPattern" value="/site/[0-3]/.*" />
 		<property name="urlService" ref="urlService" />
 		<property name="sessionVarName" value="hbloggedin" />
	</bean>
	<bean name="urlService" class="no.helsebiblioteket.admin.webservice.URLServiceWeb" init-method="init">
		<property name="serviceClient" ref="urlServiceClient" />
		<property name="targetEPR" ref="urlTargetEPR" />
		<property name="isAffectedName" ref="isAffectedName" />
		<property name="translateName" ref="translateName" />
		<property name="invokeCache" ref="methodCachingAdvice" />
	</bean>
	<bean name="urlServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="urlTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/urlService" />
	</bean>
	<bean name="isAffectedName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="isAffected" />
	</bean>
	<bean name="translateName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="translate" />
	</bean>
</beans>