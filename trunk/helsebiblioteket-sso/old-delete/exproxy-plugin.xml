<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean class="no.helsebiblioteket.evs.plugin.ProxyLoginController">
 		<property name="urlPattern" value="/site/2/ProxyServlet" />
 		<property name="sessionVarName" value="hbloggedin" />
 		<property name="loginService" ref="proxyLoginService" />
	</bean>

	<bean name="proxyLoginService" class="no.helsebiblioteket.admin.webservice.LoginServiceWeb" init-method="init">
		<property name="serviceClient" ref="proxyLoginServiceClient" />
		<property name="targetEPR" ref="proxyLoginServiceTargetEPR" />
		<property name="logInIpAddressName" ref="proxyLogInIpAddress" />
	</bean>
	
	<bean name="proxyLoginServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>

	<bean name="proxyLoginServiceTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="http://localhost:8080/axis2/services/loginService" />
	</bean>
	
	<bean name="proxyLogInIpAddress" class="javax.xml.namespace.QName">
		<constructor-arg value="http://service.admin.helsebiblioteket.no" />
		<constructor-arg value="logInIpAddress" />
	</bean>
</beans>
