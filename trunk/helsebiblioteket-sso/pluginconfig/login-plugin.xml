<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean class="no.helsebiblioteket.evs.plugin.LogInController">
 		<property name="urlPattern" value="/site/2/Helsebiblioteket" />
 		<property name="loggedInSessionVarName" value="hbloggedin" />
 		<property name="resultSessionVarName" value="hbloginresult" />
 		<!-- TODO: Use different names! -->
 		<property name="loginService" ref="loginServiceLoginController" />
 		<property name="parameterNames"><map>
 			<entry key="username" value="uid"/>
 			<entry key="password" value="password"/>
 			<entry key="from" value="from"/>
 			<entry key="goto" value="goto"/>
 			<entry key="resultName" value="result"/>
 			<entry key="resultValue" value="true"/>
 		</map></property>
	</bean>
	<bean name="loginServiceLoginController" class="no.helsebiblioteket.admin.webservice.LoginServiceWeb" init-method="init">
		<property name="serviceClient" ref="serviceClient" />
		<property name="targetEPR" ref="targetEPR" />
		<property name="logInUser" ref="logInUser" />
	</bean>
	<bean name="serviceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="targetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="http://localhost:8080/axis2/services/loginService" />
	</bean>
	<bean name="logInUser" class="javax.xml.namespace.QName">
		<constructor-arg value="http://service.admin.helsebiblioteket.no" />
		<constructor-arg value="logInUser" />
	</bean>
</beans>
