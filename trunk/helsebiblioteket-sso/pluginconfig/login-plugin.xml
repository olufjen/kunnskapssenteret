<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean class="no.helsebiblioteket.evs.plugin.LogInController">
 		<property name="urlPattern" value="/site/2/LoggInnServlet" />
 		<property name="loggedInSessionVarName" value="hbloggedin" />
 		<property name="resultSessionVarName" value="hbloginresult" />
 		<!-- TODO: Use different names! -->
 		<property name="loginService" ref="loginServiceImpl" />
 		<property name="parameterNames"><map>
 			<entry key="username" value="uid"/>
 			<entry key="password" value="password"/>
 			<entry key="from" value="from"/>
 			<entry key="goto" value="goto"/>
 			<entry key="resultName" value="result"/>
 			<entry key="resultValue" value="true"/>
 		</map></property>
	</bean>
	<!-- TODO: Use WebService! -->
	  	<bean id="loginServiceImpl" class="no.helsebiblioteket.admin.service.impl.LoginServiceImpl">
  		<property name="userDao" ref="userDao"></property>
  		<property name="emailDao" ref="emailDao"></property>
  		<property name="userCompositeDao" ref="userCompositeDao"></property>
  	</bean>
	<bean id="userDao" class="no.helsebiblioteket.admin.dao.JdbcUserDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="userCompositeDao" class="no.helsebiblioteket.admin.dao.JdbcUserCompositeDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="emailDao" class="no.helsebiblioteket.admin.service.EmailDAOImpl">
		<property name="host" value="smtp.example.org"></property>
	</bean>
	<bean id="jdbcTemplateHelsebiblioteket" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSourceHelsebiblioteket"></property>
	</bean>
	<bean id="dataSourceHelsebiblioteket" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.postgresql.Driver"></property>
		<property name="url" value="jdbc:postgresql://localhost/helsebiblioteket-admin"></property>
		<property name="username" value="helsebiblioteket"></property>
		<property name="password" value="helsebiblioteket"></property>
	</bean>




	<bean name="loginControllerLoginService" class="no.helsebiblioteket.admin.webservice.LoginServiceWeb" init-method="init">
		<property name="serviceClient" ref="loginControllerLoginServiceClient" />
		<property name="targetEPR" ref="loginControllerLoginServiceTargetEPR" />
		<property name="logInUser" ref="loginControllerLoginUser" />
	</bean>
	<bean name="loginControllerLoginServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="loginControllerLoginServiceTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="http://localhost:8080/axis2/services/loginService" />
	</bean>
	<bean name="loginControllerLoginUser" class="javax.xml.namespace.QName">
		<constructor-arg value="http://service.admin.helsebiblioteket.no" />
		<constructor-arg value="logInUser" />
	</bean>
</beans>
