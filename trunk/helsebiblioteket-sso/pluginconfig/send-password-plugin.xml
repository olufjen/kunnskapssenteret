<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean class="no.helsebiblioteket.evs.plugin.SendPasswordController">
 		<property name="urlPattern" value="/site/2/Helsebiblioteket/Dummy" />
 		<property name="resultSessionVarName" value="hbpasswordresult" />
 		<!-- TODO: Use different names! -->
 		<property name="loginService" ref="passwordControllerLoginService" />
 		<property name="parameterNames"><map>
 			<entry key="emailaddress" value="to_email"/>
 			<entry key="from" value="from"/>
 			<entry key="goto" value="goto"/>
 			<entry key="resultName" value="result"/>
 			<entry key="resultValue" value="true"/>
 		</map></property>
	</bean>
	<bean name="passwordControllerLoginService" class="no.helsebiblioteket.admin.webservice.LoginServiceWeb" init-method="init">
		<property name="serviceClient" ref="passwordServiceClient" />
		<property name="targetEPR" ref="passwordTargetEPR" />
		<property name="sendPasswordEmail" ref="passwordSendPasswordEmail" />
	</bean>
	<bean name="passwordServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="passwordTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="http://localhost:8080/axis2/services/loginService" />
	</bean>
	<bean name="passwordSendPasswordEmail" class="javax.xml.namespace.QName">
		<constructor-arg value="http://service.admin.helsebiblioteket.no" />
		<constructor-arg value="sendPasswordEmail" />
	</bean>
</beans>
