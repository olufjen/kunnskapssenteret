<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean class="no.helsebiblioteket.evs.plugin.AutoLogin">
 		<property name="urlPattern" value="/site/[0-3]/.*" />
 		<property name="sessionVarName" value="hbloggedin" />
 		<property name="loginService" ref="autoLoginLoginService" />
	</bean>

	<bean name="autoLoginLoginService" class="no.helsebiblioteket.admin.webservice.LoginServiceWeb" init-method="init">
		<property name="serviceClient" ref="autoLoginLoginServiceClient" />
		<property name="targetEPR" ref="autoLoginLoginServiceTargetEPR" />
		<property name="logInIpAddress" ref="autoLoginLogInIpAddress" />
	</bean>
	
	<bean name="autoLoginLoginServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>

	<bean name="autoLoginLoginServiceTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="http://localhost:8080/axis2/services/loginService" />
	</bean>
	
	<bean name="autoLoginLogInIpAddress" class="javax.xml.namespace.QName">
		<constructor-arg value="http://service.admin.helsebiblioteket.no" />
		<constructor-arg value="logInIpAddress" />
	</bean>
</beans>
