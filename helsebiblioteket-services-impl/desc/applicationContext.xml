<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	 	<property name="locations">
	 		<list>
	 			<value>/jdbc.properties</value>
	 		</list>
		</property>
	</bean>
  	<bean id="applicationContext" class="org.apache.axis2.extensions.spring.receivers.ApplicationContextHolder" />
  	<bean id="loginService" class="no.helsebiblioteket.admin.service.impl.LoginServiceImpl">
  		<property name="userDao" ref="userDao"></property>
  		<property name="emailDao" ref="emailDao"></property>
  	</bean>
  	<bean id="urlService" class="no.helsebiblioteket.admin.service.impl.URLServiceImpl">
  	</bean>
  	<bean id="userService" class="no.helsebiblioteket.admin.service.impl.UserServiceImpl">
  		<property name="userDao" ref="userDao"></property>
  		<property name="userCompositeDao" ref="userCompositeDao"></property>
  		<property name="roleDao" ref="roleDao"></property>
  		<property name="personDao" ref="personDao"></property>
  	</bean>
  	<bean id="organizationService" class="no.helsebiblioteket.admin.service.impl.OrganizationServiceImpl">
  		<property name="positionDao" ref="positionDao"></property>
  		<!-- TODO: Not in use. -->
  		<!--
    		<property name="organizationDao" ref="organizationDao"></property>
    		<property name="organizationTypeDao" ref="organizationTypeDao"></property>
  		-->
  	</bean>
  	
  	
	<bean id="userDao" class="no.helsebiblioteket.admin.dao.JdbcUserDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="userCompositeDao" class="no.helsebiblioteket.admin.dao.JdbcUserCompositeDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="roleDao" class="no.helsebiblioteket.admin.dao.JdbcRoleDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="personDao" class="no.helsebiblioteket.admin.dao.JdbcPersonDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	<bean id="emailDao" class="no.helsebiblioteket.admin.service.EmailDAOImpl">
		<property name="host" value="smtp.example.org"></property>
	</bean>
	<bean id="positionDao" class="no.helsebiblioteket.admin.dao.JdbcPositionDao">
		<property name="jdbcTemplate" ref="jdbcTemplateHelsebiblioteket"></property>
	</bean>
	
	<bean id="jdbcTemplateHelsebiblioteket" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSourceHelsebiblioteket"></property>
	</bean>
	<bean id="dataSourceHelsebiblioteket" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="${database.driver}"></property>
		<property name="url" value="${database.url.innsiden}"></property>
		<property name="username" value="${database.username}"></property>
		<property name="password" value="${database.password}"></property>
	</bean>
</beans>
