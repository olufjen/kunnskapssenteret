<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	 	<property name="locations">
	 		<list>
	 			<value>${cms.home}/plugins/environment.properties</value>
	 		</list>
		</property>
	</bean>
	
	<bean id="appCacheManager"
		class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation" value="${cms.home}/plugins/ehcache-helsebiblioteket.xml" />
	</bean>
	<bean id="methodCachingAdvice"
		class="no.helsebiblioteket.admin.webservice.CacheHelper">
	  <property name="cacheManager" ref="appCacheManager" />
	</bean>
	
    <!-- Configure the function library to respond at extension "example". -->
    <bean class="com.enonic.cms.api.plugin.FunctionLibraryPlugin">
        <property name="name" value="loggedinuser"/>
        <property name="target" ref="loggedInFunction" />
    </bean>
    
    <bean name="loggedInFunction" class="no.helsebiblioteket.evs.plugin.LoggedInFunction">
    	<property name="userService" ref="loggedInFunctionUserService" />
    </bean>
	
	<bean name="loggedInFunctionUserService" class="no.helsebiblioteket.admin.webservice.UserServiceWeb" init-method="init">
		<property name="serviceClient" ref="loggedInServiceClient" />
		<property name="targetEPR" ref="loggedInTargetEPR" />
		<property name="positionListAllName" ref="loggedInAllPositionsName" />
		<property name="cacheHelper" ref="methodCachingAdvice" />
	</bean>
	
	<bean name="loggedInServiceClient" class="org.apache.axis2.rpc.client.RPCServiceClient">
	</bean>
	<bean name="loggedInTargetEPR" class="org.apache.axis2.addressing.EndpointReference">
		<constructor-arg value="${webservice.service.url.prefix}/userService" />
	</bean>
	<bean name="loggedInAllPositionsName" class="javax.xml.namespace.QName">
		<constructor-arg value="${webservice.domain.url}" />
		<constructor-arg value="getPositionListAll" />
	</bean>
</beans>
